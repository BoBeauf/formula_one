{
  "$id": "https://www.f1db.com/schema/v4.1.0/splitted/f1db-races.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "F1DB",
  "description": "F1DB Races JSON Schema",
  "type": "array",
  "items": {
    "$ref": "#/definitions/Race"
  },
  "additionalProperties": false,
  "definitions": {
    "Race": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "integer",
          "description": "The unique identifier."
        },
        "year": {
          "type": "integer",
          "description": "The year."
        },
        "round": {
          "type": "integer",
          "minimum": 1,
          "description": "The round."
        },
        "date": {
          "type": "string",
          "format": "date",
          "description": "The date of the race (UTC)."
        },
        "time": {
          "type": ["string", "null"],
          "minLength": 5,
          "maxLength": 5,
          "pattern": "^([01][0-9]|2[0-3]):([0-5][0-9])$",
          "description": "The start time of the race (UTC)."
        },
        "grandPrixId": {
          "type": "string",
          "description": "The Grand Prix."
        },
        "officialName": {
          "type": "string",
          "description": "The official name."
        },
        "qualifyingFormat": {
          "$ref": "#/definitions/QualifyingFormat",
          "description": "The qualifying format."
        },
        "sprintQualifyingFormat": {
          "$ref": "#/definitions/SprintQualifyingFormat",
          "description": "The sprint qualifying format."
        },
        "circuitId": {
          "type": "string",
          "description": "The circuit."
        },
        "circuitType": {
          "$ref": "#/definitions/CircuitType",
          "description": "The circuit type."
        },
        "courseLength": {
          "type": "number",
          "minimum": 0,
          "description": "The course length."
        },
        "laps": {
          "type": "integer",
          "minimum": 0,
          "description": "The number of laps."
        },
        "distance": {
          "type": "number",
          "minimum": 0,
          "description": "The distance."
        },
        "scheduledLaps": {
          "type": ["integer", "null"],
          "minimum": 0,
          "description": "The scheduled number of laps."
        },
        "scheduledDistance": {
          "type": ["number", "null"],
          "minimum": 0,
          "description": "The scheduled distance."
        },
        "preQualifyingDate": {
          "type": ["string", "null"],
          "format": "date",
          "description": "The pre-qualifying date (UTC)."
        },
        "preQualifyingTime": {
          "type": ["string", "null"],
          "minLength": 5,
          "maxLength": 5,
          "pattern": "^([01][0-9]|2[0-3]):([0-5][0-9])$",
          "description": "The pre-qualifying start time (UTC)."
        },
        "freePractice1Date": {
          "type": ["string", "null"],
          "format": "date",
          "description": "The free practice 1 date (UTC)."
        },
        "freePractice1Time": {
          "type": ["string", "null"],
          "minLength": 5,
          "maxLength": 5,
          "pattern": "^([01][0-9]|2[0-3]):([0-5][0-9])$",
          "description": "The free practice 1 start time (UTC)."
        },
        "freePractice2Date": {
          "type": ["string", "null"],
          "format": "date",
          "description": "The free practice 2 date (UTC)."
        },
        "freePractice2Time": {
          "type": ["string", "null"],
          "minLength": 5,
          "maxLength": 5,
          "pattern": "^([01][0-9]|2[0-3]):([0-5][0-9])$",
          "description": "The free practice 2 start time (UTC)."
        },
        "freePractice3Date": {
          "type": ["string", "null"],
          "format": "date",
          "description": "The free practice 3 date (UTC)."
        },
        "freePractice3Time": {
          "type": ["string", "null"],
          "minLength": 5,
          "maxLength": 5,
          "pattern": "^([01][0-9]|2[0-3]):([0-5][0-9])$",
          "description": "The free practice 3 start time (UTC)."
        },
        "freePractice4Date": {
          "type": ["string", "null"],
          "format": "date",
          "description": "The free practice 4 date (UTC)."
        },
        "freePractice4Time": {
          "type": ["string", "null"],
          "minLength": 5,
          "maxLength": 5,
          "pattern": "^([01][0-9]|2[0-3]):([0-5][0-9])$",
          "description": "The free practice 4 start time (UTC)."
        },
        "qualifying1Date": {
          "type": ["string", "null"],
          "format": "date",
          "description": "The qualifying 1 date (UTC)."
        },
        "qualifying1Time": {
          "type": ["string", "null"],
          "minLength": 5,
          "maxLength": 5,
          "pattern": "^([01][0-9]|2[0-3]):([0-5][0-9])$",
          "description": "The qualifying 1 start time (UTC)."
        },
        "qualifying2Date": {
          "type": ["string", "null"],
          "format": "date",
          "description": "The qualifying 2 date (UTC)."
        },
        "qualifying2Time": {
          "type": ["string", "null"],
          "minLength": 5,
          "maxLength": 5,
          "pattern": "^([01][0-9]|2[0-3]):([0-5][0-9])$",
          "description": "The qualifying 2 start time (UTC)."
        },
        "qualifyingDate": {
          "type": ["string", "null"],
          "format": "date",
          "description": "The qualifying date (UTC)."
        },
        "qualifyingTime": {
          "type": ["string", "null"],
          "minLength": 5,
          "maxLength": 5,
          "pattern": "^([01][0-9]|2[0-3]):([0-5][0-9])$",
          "description": "The qualifying start time (UTC)."
        },
        "sprintQualifyingDate": {
          "type": ["string", "null"],
          "format": "date",
          "description": "The sprint qualifying date (UTC)."
        },
        "sprintQualifyingTime": {
          "type": ["string", "null"],
          "minLength": 5,
          "maxLength": 5,
          "pattern": "^([01][0-9]|2[0-3]):([0-5][0-9])$",
          "description": "The sprint qualifying start time (UTC)."
        },
        "sprintRaceDate": {
          "type": ["string", "null"],
          "format": "date",
          "description": "The sprint race date (UTC)."
        },
        "sprintRaceTime": {
          "type": ["string", "null"],
          "minLength": 5,
          "maxLength": 5,
          "pattern": "^([01][0-9]|2[0-3]):([0-5][0-9])$",
          "description": "The sprint race start time (UTC)."
        },
        "warmingUpDate": {
          "type": ["string", "null"],
          "format": "date",
          "description": "The warming-up date (UTC)."
        },
        "warmingUpTime": {
          "type": ["string", "null"],
          "minLength": 5,
          "maxLength": 5,
          "pattern": "^([01][0-9]|2[0-3]):([0-5][0-9])$",
          "description": "The warming-up start time (UTC)."
        }
      },
      "required": [
        "id",
        "year",
        "round",
        "date",
        "time",
        "grandPrixId",
        "officialName",
        "qualifyingFormat",
        "sprintQualifyingFormat",
        "circuitId",
        "circuitType",
        "courseLength",
        "laps",
        "distance",
        "scheduledLaps",
        "scheduledDistance",
        "preQualifyingDate",
        "preQualifyingTime",
        "freePractice1Date",
        "freePractice1Time",
        "freePractice2Date",
        "freePractice2Time",
        "freePractice3Date",
        "freePractice3Time",
        "freePractice4Date",
        "freePractice4Time",
        "qualifying1Date",
        "qualifying1Time",
        "qualifying2Date",
        "qualifying2Time",
        "qualifyingDate",
        "qualifyingTime",
        "sprintQualifyingDate",
        "sprintQualifyingTime",
        "sprintRaceDate",
        "sprintRaceTime",
        "warmingUpDate",
        "warmingUpTime"
      ]
    },
    "CircuitType": {
      "type": "string",
      "enum": [
        "RACE",
        "ROAD",
        "STREET"
      ],
      "description": "The circuit type."
    },
    "QualifyingFormat": {
      "type": "string",
      "enum": [
        "FOUR_LAPS",
        "TWO_SESSION",
        "ONE_SESSION",
        "ONE_LAP",
        "AGGREGATE",
        "KNOCKOUT",
        "ELIMINATION",
        "SPRINT_RACE"
      ],
      "description": "The qualifying format."
    },
    "SprintQualifyingFormat": {
      "type": ["string", "null"],
      "enum": [
        "SPRINT_SHOOTOUT",
        null
      ],
      "description": "The sprint qualifying format."
    }
  }
}
